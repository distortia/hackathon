<% include header %>
    <div class="container">
        <div class="row">
            <div class="three columns"></div>
            <div class="six columns">

                <h1><span class="fa fa-sign-in"></span> Signup</h1>

                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>

                <!-- LOGIN FORM -->
                <form action="/signup" method="post">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control u-full-width" name="email">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control u-full-width" name="password">
                    </div>

                    <button type="submit" class="button-primary u-full-width">Signup</button>
                </form>

                <hr>

                <p>Already have an account? <a href="/login">Login</a></p>
                <p>Or go <a href="/">home</a>.</p>
            </div>
        </div>
    </div>
<% include footer %>