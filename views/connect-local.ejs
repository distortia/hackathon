<% include header %>
    <div class="container">
        <div class="row">
            <div class="three columns"></div>
            <div class="nine columns">

                <h1><span class="fa fa-user"></span> Add Local Account</h1>

                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>

                <!-- LOGIN FORM -->
                <form action="/connect/local" method="post">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control u-full-width" name="email">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control u-full-width" name="password">
                    </div>

                    <button type="submit" class="button-primary u-full-width">Add Local</button>
                </form>

                <hr>

                <p><a href="/profile">Go back to profile</a></p>
            </div>
        </div>
    </div>
<% include header %>